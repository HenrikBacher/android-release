<resources>
  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="colorSecondary">@color/colorAccent</item>
    <item name="colorOnSecondary">@color/onSecondary</item>
    <item name="android:textColorPrimary">@color/textColorStrong</item>
    <item name="android:textColorSecondary">@color/textColor</item>
    <item name="android:textViewStyle">@style/RubikTextViewStyle</item>
    <item name="materialButtonStyle">@style/RubikButtonStyle</item>
  </style>

  <style name="BaseTextAppearance" parent="TextAppearance.AppCompat">
    <item name="fontFamily">@font/rubik</item>
  </style>

  <style name="RubikTextViewStyle" parent="Widget.AppCompat.TextView">
    <item name="android:textAppearance">@style/BaseTextAppearance</item>
  </style>

  <style name="RubikButtonStyle" parent="Widget.MaterialComponents.Button">
    <item name="android:textAppearance">@style/BaseTextAppearance</item>
  </style>

  <style name="MobileConsents_BaseTextAppearance">
    <!-- Change font family in predefined views -->
<!--    <item name="android:fontFamily">sans-serif-condensed</item>-->
  </style>
</resources>
