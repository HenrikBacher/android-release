<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <androidx.appcompat.widget.Toolbar
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:title="@string/text_mobile_consents_sample">

    <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/buttonUseSampleId"
      style="@style/MobileConsents_ToolbarButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@drawable/mobileconsents_toolbar_button"
      android:text="@string/button_sample_uuid" />

  </androidx.appcompat.widget.Toolbar>

  <com.google.android.material.textfield.TextInputLayout
    android:id="@+id/layoutUuid"
    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/defaultPadding"
    android:layout_marginEnd="@dimen/defaultPadding"
    android:hint="@string/text_consent_id"
    app:layout_constraintTop_toBottomOf="@+id/toolbar">

    <com.google.android.material.textfield.TextInputEditText
      android:id="@+id/textUuid"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textAppearance="@style/BaseTextAppearance" />
  </com.google.android.material.textfield.TextInputLayout>

  <com.google.android.material.button.MaterialButton
    android:id="@+id/buttonFetchSend"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/defaultPadding"
    android:layout_marginEnd="@dimen/defaultPadding"
    android:enabled="false"
    android:text="@string/button_fetch_send"
    app:layout_constraintBottom_toTopOf="@id/buttonStorage" />

  <com.google.android.material.button.MaterialButton
    android:id="@+id/buttonStorage"
    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/defaultPadding"
    android:layout_marginEnd="@dimen/defaultPadding"
    android:text="@string/button_show_storage"
    android:textAppearance="@style/BaseTextAppearance"
    app:layout_constraintBottom_toTopOf="@id/buttonPrivacyPreferences" />

  <com.google.android.material.button.MaterialButton
    android:id="@+id/buttonPrivacyPreferences"
    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/defaultPadding"
    android:layout_marginEnd="@dimen/defaultPadding"
    android:enabled="false"
    android:text="@string/button_privacy_preferences"
    android:textAppearance="@style/BaseTextAppearance"
    app:layout_constraintBottom_toTopOf="@id/buttonPrivacyCenter" />

  <com.google.android.material.button.MaterialButton
    android:id="@+id/buttonPrivacyCenter"
    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/defaultPadding"
    android:layout_marginEnd="@dimen/defaultPadding"
    android:layout_marginBottom="@dimen/defaultPadding"
    android:enabled="false"
    android:text="@string/button_privacy_center"
    android:textAppearance="@style/BaseTextAppearance"
    app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
