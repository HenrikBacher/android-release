<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="com.cookieinformation.mobileconsents.sample.FetchSendActivity">

  <androidx.appcompat.widget.Toolbar
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    app:layout_constraintTop_toTopOf="parent"
    app:navigationIcon="?attr/homeAsUpIndicator"
    app:title="@string/button_fetch_send" />


  <com.google.android.material.textfield.TextInputLayout
    android:id="@+id/layoutLanguage"
    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/defaultPadding"
    android:layout_marginEnd="@dimen/defaultPadding"
    android:hint="@string/hint_preferred_language"
    app:layout_constraintTop_toBottomOf="@id/toolbar">

    <com.google.android.material.textfield.TextInputEditText
      android:id="@+id/textLanguage"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textAppearance="@style/BaseTextAppearance" />
  </com.google.android.material.textfield.TextInputLayout>

  <com.google.android.material.button.MaterialButton
    android:id="@+id/buttonFetch"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/defaultPadding"
    android:layout_marginEnd="@dimen/defaultPadding"
    android:text="@string/button_fetch"
    app:layout_constraintTop_toBottomOf="@+id/layoutLanguage" />

  <TextView
    android:id="@+id/textError"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:padding="@dimen/defaultPadding"
    android:textColor="?attr/colorError"
    android:textSize="15sp"
    app:layout_constraintBottom_toTopOf="@+id/buttonSend"
    app:layout_constraintTop_toBottomOf="@+id/buttonFetch"
    tools:text="Error" />

  <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/recyclerConsents"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:clipToPadding="false"
    android:padding="@dimen/defaultPadding"
    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
    app:layout_constraintBottom_toTopOf="@+id/buttonSend"
    app:layout_constraintTop_toBottomOf="@+id/buttonFetch" />

  <com.google.android.material.button.MaterialButton
    android:id="@+id/buttonSend"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/defaultPadding"
    android:layout_marginEnd="@dimen/defaultPadding"
    android:text="@string/button_send_consent"
    app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
