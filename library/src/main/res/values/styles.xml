<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="MobileConsents_BaseTextAppearance" />

  <style name="MobileConsents_TextAppearance" parent="MobileConsents_BaseTextAppearance">
    <item name="android:textSize">@dimen/mobileconsents_text_size</item>
    <item name="android:textColor">@color/mobileconsents_color_text</item>
  </style>

  <style name="MobileConsents_Text">
    <item name="android:textAppearance">@style/MobileConsents_TextAppearance</item>
    <item name="android:textColorLink">@color/mobileconsents_color_text_strong</item>
  </style>

  <style name="MobileConsents_BaseButton">
    <item name="android:textAppearance">@style/MobileConsents_TextAppearance</item>
  </style>

  <style name="MobileConsents_PrivacyPreferencesLayout" />

  <style name="MobileConsents_PrivacyPreferencesScrollView">
    <item name="android:fadingEdge">vertical</item>
    <item name="android:fadingEdgeLength">@dimen/mobileconsents_list_fading_edge_size</item>
    <item name="android:requiresFadingEdge">vertical</item>
    <item name="android:overScrollMode">never</item>
  </style>

  <style name="MobileConsents_PrivacyPreferencesTopLayout">
    <item name="android:paddingLeft">@dimen/mobileconsents_privacy_preferences_padding</item>
    <item name="android:paddingRight">@dimen/mobileconsents_privacy_preferences_padding</item>
    <item name="android:paddingTop">@dimen/mobileconsents_privacy_preferences_padding</item>
    <item name="android:paddingBottom">@dimen/mobileconsents_privacy_preferences_padding</item>
  </style>

  <style name="MobileConsents_PrivacyPreferencesButtonsLayout">
    <item name="android:paddingLeft">@dimen/mobileconsents_privacy_preferences_padding</item>
    <item name="android:paddingRight">@dimen/mobileconsents_privacy_preferences_padding</item>
    <item name="android:paddingTop">0dp</item>
    <item name="android:paddingBottom">@dimen/mobileconsents_privacy_preferences_padding_half</item>
  </style>

  <style name="MobileConsents_PrivacyPreferencesTitle" parent="MobileConsents_Text">
    <item name="android:textColor">@color/mobileconsents_color_text_strong</item>
    <item name="android:textSize">28sp</item>
    <item name="android:gravity">center</item>
    <item name="android:layout_marginBottom">8dp</item>
  </style>

  <style name="MobileConsents_PrivacyPreferencesSubTitle" parent="MobileConsents_Text">
    <item name="android:textSize">15sp</item>
    <item name="android:gravity">center</item>
    <item name="android:layout_marginBottom">15dp</item>
  </style>

  <style name="MobileConsents_PrivacyPreferencesDescription" parent="MobileConsents_Text" />

  <style name="MobileConsents_PrivacyPreferencesList">
    <item name="android:paddingTop">@dimen/mobileconsents_privacy_preferences_padding</item>
    <item name="android:paddingStart">0dp</item>
    <item name="android:paddingEnd">@dimen/mobileconsents_privacy_preferences_padding</item>
  </style>

  <style name="MobileConsents_PrivacyPreferencesButton" parent="MobileConsents_BaseButton" />

  <style name="MobileConsents_PrivacyPreferencesItem" />

  <style name="MobileConsents_PrivacyPreferencesItemCheckBox">
    <item name="android:minWidth">0dp</item>
    <item name="android:minHeight">0dp</item>
  </style>

  <style name="MobileConsents_PrivacyPreferencesItemText" parent="MobileConsents_Text" />

  <style name="MobileConsents_PrivacyCenterLayout" />

  <style name="MobileConsents_PrivacyCenterToolbar">
    <item name="navigationIcon">?attr/homeAsUpIndicator</item>
    <item name="android:background">@android:color/transparent</item>
    <item name="titleTextColor">@color/mobileconsents_color_text_strong</item>
  </style>

  <style name="MobileConsents_PrivacyLayout" />

  <style name="MobileConsents_PrivacyToolbar">
    <item name="navigationIcon">@drawable/mobileconsents_ic_close</item>
    <item name="android:background">?colorPrimary</item>
    <item name="titleTextColor">@color/mobileconsents_color_text_strong</item>
  </style>

  <style name="MobileConsents_ToolbarButton" parent="MobileConsents_BaseButton">
    <item name="android:minHeight">0dp</item>
    <item name="android:minWidth">0dp</item>
    <item name="android:paddingStart">10dp</item>
    <item name="android:paddingTop">4dp</item>
    <item name="android:paddingEnd">10dp</item>
    <item name="android:paddingBottom">4dp</item>
    <item name="android:layout_marginEnd">@dimen/mobileconsents_privacy_center_padding_half</item>
    <item name="android:layout_gravity">end|center_vertical</item>
    <item name="android:background">@drawable/mobileconsents_toolbar_button</item>
    <item name="android:textColor">@color/mobileconsents_toolbar_button_text_color</item>
  </style>

  <style name="MobileConsents_PrivacyList">
    <item name="android:fadingEdgeLength">@dimen/mobileconsents_list_fading_edge_size</item>
    <item name="android:requiresFadingEdge">vertical</item>
  </style>

  <style name="MobileConsents_PrivacyTitle" parent="MobileConsents_Text">
    <item name="android:textSize">24sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/mobileconsents_color_text_strong</item>
    <item name="android:paddingTop">@dimen/mobileconsents_privacy_padding</item>
    <item name="android:paddingStart">@dimen/mobileconsents_privacy_padding</item>
    <item name="android:paddingEnd">@dimen/mobileconsents_privacy_padding</item>
    <item name="android:paddingBottom">@dimen/mobileconsents_privacy_padding_half</item>
  </style>

  <style name="MobileConsents_PrivacyShortDescription" parent="MobileConsents_Text">
    <item name="android:textSize">12sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/mobileconsents_color_text_strong</item>
    <item name="android:paddingTop">@dimen/mobileconsents_privacy_padding_half</item>
    <item name="android:paddingStart">@dimen/mobileconsents_privacy_padding</item>
    <item name="android:paddingEnd">@dimen/mobileconsents_privacy_padding</item>
    <item name="android:paddingBottom">@dimen/mobileconsents_privacy_padding_half</item>
  </style>

  <style name="MobileConsents_PrivacyReadMore" parent="MobileConsents_PrivacyShortDescription">
    <item name="android:textColor">?colorAccent</item>
    <item name="android:paddingTop">@dimen/mobileconsents_privacy_padding_half</item>
    <item name="android:paddingStart">@dimen/mobileconsents_privacy_padding</item>
    <item name="android:paddingEnd">0dp</item>
    <item name="android:paddingBottom">@dimen/mobileconsents_privacy_padding_half</item>
  </style>

  <style name="MobileConsents_PrivacyLongDescription" parent="MobileConsents_Text">
    <item name="android:textSize">12sp</item>
    <item name="android:textColor">@color/mobileconsents_color_text_strong</item>
  </style>

  <style name="MobileConsents_PrivacyButtons" parent="@style/Widget.MaterialComponents.Button.TextButton">
    <item name="android:backgroundTint">?colorAccent</item>
    <item name="android:textColor">@color/mobileconsents_button_text_color</item>
  </style>

  <style name="MobileConsents_PoweredByDescription" parent="MobileConsents_Text">
    <item name="android:textSize">10sp</item>
    <item name="android:textColor">@color/mobileconsents_color_text</item>
  </style>

  <style name="MobileConsents_PrivacyPreferences" />

  <style name="MobileConsents_PrivacyPreferencesListNew" >
    <item name="android:paddingBottom">@dimen/mobileconsents_privacy_padding_half</item>
  </style>

