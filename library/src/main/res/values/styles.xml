<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="MobileConsents_TextAppearance" parent="TextAppearance.AppCompat" />

  <style name="MobileConsents_TitleTextAppearance" parent="MobileConsents_TextAppearance" />

  <style name="MobileConsents_PrivacyPreferencesLayout" />

  <style name="MobileConsents_PrivacyPreferencesTopLayout">
    <item name="android:paddingLeft">@dimen/mobileconsents_privacy_preferences_padding</item>
    <item name="android:paddingRight">@dimen/mobileconsents_privacy_preferences_padding</item>
    <item name="android:paddingTop">@dimen/mobileconsents_privacy_preferences_padding</item>
    <item name="android:paddingBottom">@dimen/mobileconsents_privacy_preferences_padding</item>
  </style>

  <style name="MobileConsents_PrivacyPreferencesButtonsLayout">
    <item name="android:paddingLeft">@dimen/mobileconsents_privacy_preferences_padding</item>
    <item name="android:paddingRight">@dimen/mobileconsents_privacy_preferences_padding</item>
    <item name="android:paddingTop">0dp</item>
    <item name="android:paddingBottom">@dimen/mobileconsents_privacy_preferences_padding_half</item>
  </style>

  <style name="MobileConsents_PrivacyPreferencesText">
    <item name="android:textAppearance">@style/MobileConsents_TextAppearance</item>
  </style>

  <style name="MobileConsents_PrivacyPreferencesTitle" parent="MobileConsents_PrivacyPreferencesText">
    <item name="android:textAppearance">@style/MobileConsents_TitleTextAppearance</item>
    <item name="android:textSize">28sp</item>
    <item name="android:gravity">center</item>
    <item name="android:layout_marginBottom">8dp</item>
  </style>

  <style name="MobileConsents_PrivacyPreferencesSubTitle" parent="MobileConsents_PrivacyPreferencesText">
    <item name="android:textSize">15sp</item>
    <item name="android:gravity">center</item>
    <item name="android:layout_marginBottom">15dp</item>
  </style>

  <style name="MobileConsents_PrivacyPreferencesList">
    <item name="android:paddingTop">@dimen/mobileconsents_privacy_preferences_padding</item>
    <item name="android:paddingStart">0dp</item>
    <item name="android:paddingEnd">@dimen/mobileconsents_privacy_preferences_padding</item>
  </style>

  <style name="MobileConsents_PrivacyPreferencesButton" />

  <style name="MobileConsents_PrivacyPreferencesItem" />

  <style name="MobileConsents_PrivacyPreferencesItemCheckBox">
    <item name="android:minWidth">0dp</item>
    <item name="android:minHeight">0dp</item>
  </style>

  <style name="MobileConsents_PrivacyPreferencesItemText" parent="MobileConsents_PrivacyPreferencesText" />

</resources>