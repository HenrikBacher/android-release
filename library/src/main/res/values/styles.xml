  <style name="MobileConsents_PrivacyPreferencesTitleNew" parent="MobileConsents_Text">
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/mobileconsents_color_text_strong</item>
    <item name="android:paddingTop">@dimen/mobileconsents_privacy_padding</item>
    <item name="android:paddingBottom">@dimen/mobileconsents_privacy_padding_half</item>
  </style>
-->

  <style name="MobileConsents_PrivacyPreferencesItemTextNew" parent="MobileConsents_Text">
    <item name="android:paddingStart">@dimen/mobileconsents_privacy_padding</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/mobileconsents_color_text_strong</item>
    <item name="android:paddingTop">@dimen/mobileconsents_privacy_padding</item>
    <item name="android:paddingBottom">@dimen/mobileconsents_privacy_padding_half</item>
  </style>

  <style name="MobileConsents_PrivacyPreferencesItemDetails" parent="MobileConsents_Text" >
    <item name="android:paddingStart">@dimen/mobileconsents_privacy_padding</item>
    <item name="android:paddingBottom">@dimen/mobileconsents_privacy_padding</item>
  </style>

  <style name="MobileConsents_PrivacyPreferencesItemSwitch">
    <item name="android:layout_marginTop">@dimen/mobileconsents_privacy_padding</item>
    <item name="android:layout_marginBottom">@dimen/mobileconsents_privacy_padding_half</item>
    <item name="android:layout_marginEnd">@dimen/mobileconsents_privacy_padding</item>
  </style>

  <style name="MobileConsents_PrivacyCenterList" >
    <item name="android:fadingEdge">vertical</item>
    <item name="android:fadingEdgeLength">@dimen/mobileconsents_list_fading_edge_size</item>
    <item name="android:requiresFadingEdge">vertical</item>
  </style>

  <style name="MobileConsents_PrivacyCenterInfoItemText" parent="MobileConsents_Text">
    <item name="android:paddingStart">@dimen/mobileconsents_privacy_center_padding</item>
    <item name="android:paddingEnd">@dimen/mobileconsents_privacy_center_padding</item>
    <item name="android:paddingTop">@dimen/mobileconsents_privacy_center_padding</item>
    <item name="android:paddingBottom">@dimen/mobileconsents_privacy_center_padding_half</item>
    <item name="android:background">@drawable/mobileconsents_privacy_center_info_item_background</item>
    <item name="android:textAllCaps">true</item>
  </style>

  <style name="MobileConsents_PrivacyCenterDetailsItemText" parent="MobileConsents_Text">
    <item name="android:paddingStart">@dimen/mobileconsents_privacy_center_padding</item>
    <item name="android:paddingTop">@dimen/mobileconsents_privacy_center_padding_half</item>
    <item name="android:paddingEnd">@dimen/mobileconsents_privacy_center_padding</item>
    <item name="android:paddingBottom">@dimen/mobileconsents_privacy_center_padding_half</item>
  </style>

  <style name="MobileConsents_PrivacyCenterPreferences" />

  <style name="MobileConsents_PrivacyCenterPreferencesTitle" parent="MobileConsents_Text">
    <item name="android:textAllCaps">true</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/mobileconsents_color_text_strong</item>
    <item name="android:paddingTop">@dimen/mobileconsents_privacy_center_padding</item>
    <item name="android:paddingStart">@dimen/mobileconsents_privacy_center_padding</item>
    <item name="android:paddingEnd">@dimen/mobileconsents_privacy_center_padding</item>
    <item name="android:paddingBottom">@dimen/mobileconsents_privacy_center_padding_half</item>
  </style>

  <style name="MobileConsents_PrivacyCenterPreferencesSubTitle" parent="MobileConsents_Text">
    <item name="android:textSize">11sp</item>
    <item name="android:layout_marginTop">4dp</item>
    <item name="android:background">@color/mobileconsents_color_info_item_background</item>
    <item name="android:paddingTop">6dp</item>
    <item name="android:paddingStart">@dimen/mobileconsents_privacy_center_padding</item>
    <item name="android:paddingEnd">@dimen/mobileconsents_privacy_center_padding</item>
    <item name="android:paddingBottom">6dp</item>
  </style>

  <style name="MobileConsents_PrivacyCenterPreferencesList" >
    <item name="android:paddingBottom">@dimen/mobileconsents_privacy_center_padding_half</item>
  </style>

  <style name="MobileConsents_PrivacyCenterPreferencesItemSwitch">
    <item name="android:layout_marginTop">@dimen/mobileconsents_privacy_center_padding_half</item>
    <item name="android:layout_marginBottom">@dimen/mobileconsents_privacy_center_padding_half</item>
    <item name="android:layout_marginEnd">@dimen/mobileconsents_privacy_center_padding_half</item>
  </style>

  <style name="MobileConsents_PrivacyCenterPreferencesItemText" parent="MobileConsents_Text" >
    <item name="android:paddingStart">@dimen/mobileconsents_privacy_center_padding</item>
  </style>

  <style name="MobileConsents_PrivacyCenterPreferencesItemDetails" parent="MobileConsents_Text" >
    <item name="android:paddingStart">@dimen/mobileconsents_privacy_center_padding</item>
    <item name="android:paddingBottom">@dimen/mobileconsents_privacy_center_padding_half</item>
  </style>

</resources>
