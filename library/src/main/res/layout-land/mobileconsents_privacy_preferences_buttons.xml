<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/mobileconsents_privacy_preferences_buttons_layout"
  style="@style/MobileConsents_PrivacyPreferencesButtonsLayout"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <Button
      android:id="@+id/mobileconsents_btn_read_more"
      style="@style/MobileConsents_PrivacyPreferencesButton"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginEnd="@dimen/mobileconsents_privacy_preferences_padding_half"
      android:layout_weight="1"
      tools:text="Read More" />

    <Button
      android:id="@+id/mobileconsents_btn_reject_all"
      style="@style/MobileConsents_PrivacyPreferencesButton"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/mobileconsents_privacy_preferences_padding_half"
      android:layout_weight="1"
      tools:text="Reject All" />
  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <Button
      android:id="@+id/mobileconsents_btn_accept_all"
      style="@style/MobileConsents_PrivacyPreferencesButton"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginEnd="@dimen/mobileconsents_privacy_preferences_padding_half"
      android:layout_weight="1"
      tools:text="Accept All" />

    <Button
      android:id="@+id/mobileconsents_btn_accept_selected"
      style="@style/MobileConsents_PrivacyPreferencesButton"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/mobileconsents_privacy_preferences_padding_half"
      android:layout_weight="1"
      tools:text="Accept Selected" />
  </LinearLayout>
</LinearLayout>